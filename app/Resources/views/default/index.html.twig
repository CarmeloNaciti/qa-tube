{% extends 'base.html.twig' %}

{% block search %}
    {% include 'default/partials/search.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-success">
                    <div class="panel-body"><h5 style="text-align: center">{{ 'panels.latest_videos'|trans({}, 'labels') }}</h5></div>
                </div>
                {% for entity in latestEntities|slice(0, 3) %}
                    <div class="panel panel-success">
                        <div class="panel-heading" data-id="{{ entity.id }}">{{ entity.title }}</div>
                        <div class="panel-body">
                            <video id="" class="video-js vjs-default-skin" controls preload="auto" data-setup='{}' style="height: 250px">
                                <source src="{{ url('_media_item', {'mediaName' : entity.mediaName}) }}">
                            </video>
                        </div>
                    </div>
                    <br>
                {% endfor %}
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-body"><h5 style="text-align: center">{{ 'panels.popular_videos'|trans({}, 'labels') }}</h5></div>
                </div>
                {% for entity in popularEntities|slice(0, 3) %}
                    <div class="panel panel-default">
                        <div class="panel-heading" data-id="{{ entity.id }}">{{ entity.title }} <span class="label label-default" id="views_label">{{ entity.views }} views</span></div>
                        <div class="panel-body">
                            <video id="" class="video-js vjs-default-skin" controls preload="auto" data-setup='{}' style="height: 250px">
                                <source src="{{ url('_media_item', {'mediaName' : entity.mediaName}) }}">
                            </video>
                        </div>
                    </div>
                    <br>
                {% endfor %}
            </div>
            <div class="col-sm-4">
                <div class="panel panel-danger">
                    <div class="panel-body"><h5 style="text-align: center">{{ 'panels.training_videos'|trans({}, 'labels') }}</h5></div>
                </div>
                {% for entity in trainingEntities|slice(0, 3) %}
                    <div class="panel panel-danger">
                        <div class="panel-heading" data-id="{{ entity.id }}">{{ entity.title }}</div>
                        <div class="panel-body">
                            <video id="" class="video-js vjs-default-skin" controls preload="auto" data-setup='{}' style="height: 250px">
                                <source src="{{ url('_media_item', {'mediaName' : entity.mediaName}) }}">
                            </video>
                        </div>
                    </div>
                    <br>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
