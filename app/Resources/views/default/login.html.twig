{% extends 'base.html.twig' %}

{% block body %}
    <body>

    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input class="btn btn-info" type="submit" value="Submit" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </body>
{% endblock %}